			{ x: new Date(2016, 05, 1) , y: 85, indexLabel: "", markerType: "triangle", markerColor: "#6B8E23" },
			{ x: new Date(2016, 06, 1) , y: 68, indexLabel: "", markerType: "triangle", markerColor: "#6B8E23" },
