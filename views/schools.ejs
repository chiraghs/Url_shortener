			{ x: new Date(2016, 08, 1) , y: 0, indexLabel: "", markerType: "triangle", markerColor: "#6B8E23" },
			{ x: new Date(2016, 09, 1) , y: 0, indexLabel: "", markerType: "triangle", markerColor: "#6B8E23" },
			{ x: new Date(2016, 10, 1) , y: 0, indexLabel: "", markerType: "triangle", markerColor: "#6B8E23" },
			{ x: new Date(2016, 11, 1) , y: 0, indexLabel: "", markerType: "triangle", markerColor: "#6B8E23" }
		]
	}]
});
chart.render();

}
</script>
</head>
<body>
    <div class="row offset-2">
        <h3 id="selectedBoard" class="col-4 offset-2"></h3>
        <h3 id="selectedSchool" class="col-4"></h3></div>
<div id="chartContainer" style="height: 300px; width: 100%;display: none;"></div>


<script>  function searchSchools() {
    var x = document.getElementById("slctBoard").value;
    var y = document.getElementById("slctSchool").value;
    document.getElementById("selectedBoard").innerHTML = x;
    document.getElementById("selectedSchool").innerHTML = y;
    var s = document.getElementById("chartContainer");
    s.style.display = "block";
  }</script>
  <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
